  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "babel": {
    "presets": [
      "@babel/react",
      "@babel/env"
    ]
  },
  "dependencies": {
    "@osn/provider-options": "^1.0.2",
    "@polkadot/api": "^7.9.1",
    "@osn/consts": "^0.0.2"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "@polkadot/api": "^7.9.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.3",
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11"
  }
